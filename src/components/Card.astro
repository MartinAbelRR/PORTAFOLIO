---
import type { MyInformation } from '../data/data.ts';

interface Props {	
	area: string;
	colorText: string;
	href: string;
	myInformation: MyInformation;
}

const { area, colorText, href, myInformation } = Astro.props;
const { description, image, labels, title } = myInformation;
---

<article class={`${area} bg-skyblue-add/10 duration-300 hover:scale-90 rounded-lg transition-transform`} transition:animate="slide">	
	<a class="flex flex-col group h-full overflow-hidden px-4 py-2 relative lg:flex-row" href={href}>
		<div class="duration-500 flex flex-col group-hover:opacity-0 justify-between max-w-lg p-2 transition">
			<div class=`${colorText} flex flex-wrap font-bold gap-2`>
				{
					labels.map((label) => (
						<p class={`bg-black/20 h-max p-1 rounded-lg w-max`}>{label}</p>
					))
				}								
			</div>
			<div class="flex flex-col flex-1 justify-center">
				<h1 class=`capitalize ${colorText} font-bold text-3xl lg:text-5xl`>{title}</h1>				
				<p class="font-semibold py-4 lg:text-3xl">
					{description}
				</p>
			</div>
		</div>
								
		<picture class="duration-500 group-hover:opacity-0 self-center transition">
			<img alt={`${title}`} src={image} class={'block h-full mx-auto max-w-[400px] object-cover w-full'} />								
		</picture>
		
		<figcaption class="absolute bg-skyblue-add/10 duration-500 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:rotate-[360deg] h-full left-0 rounded-lg top-0 transition-transform translate-x-full translate-y-full w-full">
			<div class="flex h-full items-center justify-center">
				<h1 class=`capitalize ${colorText} font-bold text-5xl z-10`>{title} ðŸš€</h1>		
				<img alt={`${title}`} src={image} class={'absolute block h-full mx-auto object-cover opacity-30 w-full lg:max-w-[320px]'} />		
			</div>
		</figcaption>
	</a>

</article>

